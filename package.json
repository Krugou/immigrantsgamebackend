{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "check:unused": "depcheck .",
    "clean": "rimraf dist node_modules",
    "dev": "tsx --env-file=../.env --watch server.ts",
    "dev:https": "tsx server.ts --https",
    "start": "cross-env NODE_ENV=production tsx server.ts",
    "start:https": "cross-env NODE_ENV=production tsx server.ts --https",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^5.2.1",
    "firebase": "^12.9.0",
    "firebase-admin": "^13.6.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/npm": "^13.1.4",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.0",
    "depcheck": "^1.4.7",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "semantic-release": "^25.0.3",
    "sharp": "^0.34.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0"
  }
